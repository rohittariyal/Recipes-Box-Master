{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "max-len": [1, 120, 2, { "ignoreComments": true } ],
    "prop-types": [2],
    "react/prefer-stateless-function": [2]
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ]
}